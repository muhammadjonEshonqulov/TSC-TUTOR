<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/action_bar_profile"
            android:layout_width="match_parent"
            android:layout_height="@dimen/actionbar_size"
            android:background="@color/cl_color_primary"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/menu"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/small_margin"
                android:layout_marginEnd="@dimen/default_margin"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?selectableItemBackground"
                android:padding="@dimen/small_margin"
                android:src="@drawable/ic_baseline_menu_24"
                app:tint="@color/white" />


            <TextView
                android:id="@+id/title_profile"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center|start"
                android:layout_marginStart="7dp"
                android:layout_marginEnd="7dp"
                android:layout_weight="1"
                android:fontFamily="@font/montserrat_medium"
                android:gravity="center|start"
                android:padding="7dp"
                android:text="Student"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <ImageView
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:layout_marginEnd="@dimen/small_margin"
                android:src="@drawable/logo_main" />

        </LinearLayout>

        <com.google.android.gms.ads.AdView xmlns:ads="http://schemas.android.com/apk/res-auto"
            android:id="@+id/adView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone"
            ads:adSize="LARGE_BANNER"
            ads:adUnitId="ca-app-pub-7809559901245312/9864461009" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="@dimen/small_margin"
                        app:cardElevation="@dimen/small_margin"
                        app:cardUseCompatPadding="true">

                        <LinearLayout
                            android:id="@+id/schedule_lesson"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:clickable="true"
                            android:focusable="true"
                            android:foreground="?selectableItemBackground"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/schedule_lesson_image"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/actionbar_size"
                                android:padding="@dimen/small_margin"
                                android:src="@drawable/schedule"
                                android:transitionName="shared_element"
                                app:tint="@color/cl_color_primary" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/small_margin"
                                android:fontFamily="@font/montserrat_medium"
                                android:gravity="center"
                                android:padding="@dimen/small_margin"
                                android:text="Dars jadvali"
                                android:textColor="@color/black" />

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="@dimen/small_margin"
                        app:cardElevation="@dimen/small_margin"
                        app:cardUseCompatPadding="true">

                        <LinearLayout
                            android:id="@+id/attendance"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:clickable="true"
                            android:focusable="true"
                            android:foreground="?selectableItemBackground"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/attendance_image"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/actionbar_size"
                                android:padding="@dimen/small_margin"
                                android:src="@drawable/ic_baseline_format_list_numbered_24"
                                android:transitionName="attendance_image" />

                            <TextView
                                android:id="@+id/attendance_txt"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/small_margin"
                                android:fontFamily="@font/montserrat_medium"
                                android:gravity="center"
                                android:padding="@dimen/small_margin"
                                android:text="Davomat"
                                android:textColor="@color/black" />

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:visibility="gone"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="@dimen/small_margin"
                        app:cardElevation="@dimen/small_margin"
                        app:cardUseCompatPadding="true">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:clickable="true"
                            android:focusable="true"
                            android:foreground="?selectableItemBackground"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/actionbar_size"
                                android:padding="@dimen/small_margin"
                                android:src="@drawable/ic_baseline_attach_money_24" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/small_margin"
                                android:fontFamily="@font/montserrat_medium"
                                android:gravity="center"
                                android:padding="@dimen/small_margin"
                                android:text="Talabalarning kontrakt to'lov tahlili"
                                android:textColor="@color/black" />

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        app:cardBackgroundColor="@color/white"

                        app:cardCornerRadius="@dimen/small_margin"
                        app:cardElevation="@dimen/small_margin"
                        app:cardUseCompatPadding="true">

                        <LinearLayout
                            android:id="@+id/information_about_study"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:clickable="true"
                            android:focusable="true"
                            android:foreground="?selectableItemBackground"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/actionbar_size"
                                android:alpha="0.6"
                                android:padding="@dimen/small_margin"
                                android:src="@drawable/reference"
                                app:tint="#FFB2B2" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/small_margin"
                                android:alpha="0.6"
                                android:fontFamily="@font/montserrat_medium"
                                android:gravity="center"
                                android:padding="@dimen/small_margin"
                                android:text="Oâ€˜qish joyidan ma'lumotnoma"
                                android:textColor="@color/black" />

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        app:cardBackgroundColor="@color/white"

                        app:cardCornerRadius="@dimen/small_margin"
                        app:cardElevation="@dimen/small_margin"
                        app:cardUseCompatPadding="true">

                        <LinearLayout
                            android:id="@+id/student_curriculum_vitae"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:clickable="true"
                            android:focusable="true"
                            android:foreground="?selectableItemBackground"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/actionbar_size"
                                android:alpha="0.6"
                                android:padding="@dimen/small_margin"
                                android:src="@drawable/ic_baseline_boy_24"
                                app:tint="#FFB2B2" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/small_margin"
                                android:alpha="0.6"
                                android:fontFamily="@font/montserrat_medium"
                                android:gravity="center"
                                android:padding="@dimen/small_margin"
                                android:text="Talaba o'quv varaqasi"
                                android:textColor="@color/black" />

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"

                        android:layout_weight="1"
                        android:visibility="gone"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="@dimen/small_margin"
                        app:cardElevation="@dimen/small_margin"
                        app:cardUseCompatPadding="true">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:clickable="true"
                            android:focusable="true"
                            android:foreground="?selectableItemBackground"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/actionbar_size"
                                android:alpha="0.6"
                                android:padding="@dimen/small_margin"
                                android:src="@drawable/ic_baseline_girl_24"
                                app:tint="#FFB2B2" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/small_margin"
                                android:alpha="0.6"
                                android:fontFamily="@font/montserrat_medium"
                                android:gravity="center"
                                android:padding="@dimen/small_margin"
                                android:text="Qiz bolalar"
                                android:textColor="@color/black" />

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"

                        android:layout_weight="1"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="@dimen/small_margin"
                        app:cardElevation="@dimen/small_margin"
                        app:cardUseCompatPadding="true">

                        <LinearLayout
                            android:id="@+id/table_of_exams"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:clickable="true"
                            android:focusable="true"
                            android:foreground="?selectableItemBackground"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/actionbar_size"
                                android:alpha="0.6"
                                android:padding="@dimen/small_margin"
                                android:src="@drawable/ic_baseline_grade_24"
                                app:tint="#FFB2B2" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/small_margin"
                                android:alpha="0.6"
                                android:fontFamily="@font/montserrat_medium"
                                android:gravity="center"
                                android:padding="@dimen/small_margin"
                                android:text="Imtihonlar jadvali"
                                android:textColor="@color/black" />

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="@dimen/small_margin"
                        app:cardElevation="@dimen/small_margin"
                        app:cardUseCompatPadding="true">

                        <LinearLayout
                            android:id="@+id/performance"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:clickable="true"
                            android:focusable="true"
                            android:foreground="?selectableItemBackground"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/performance_image"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/actionbar_size"
                                android:padding="@dimen/small_margin"
                                android:src="@drawable/ic_baseline_content_paste_24"
                                android:transitionName="performance_image" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/small_margin"
                                android:fontFamily="@font/montserrat_medium"
                                android:gravity="center"
                                android:padding="@dimen/small_margin"
                                android:text="Fanlar bo`yicha o`zlashtirish "
                                android:textColor="@color/black" />

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"

                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:visibility="gone"
                        app:cardCornerRadius="@dimen/small_margin"
                        app:cardElevation="@dimen/small_margin"
                        app:cardUseCompatPadding="true">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:clickable="true"
                            android:focusable="true"
                            android:foreground="?selectableItemBackground"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/actionbar_size"
                                android:alpha="0.6"
                                android:padding="@dimen/small_margin"
                                android:src="@drawable/ic_baseline_accessible_24"
                                app:tint="#FFB2B2" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/small_margin"
                                android:alpha="0.6"
                                android:fontFamily="@font/montserrat_medium"
                                android:gravity="center"
                                android:padding="@dimen/small_margin"
                                android:text="Nogiron"
                                android:textColor="@color/black" />

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"

                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="@dimen/small_margin"
                        app:cardElevation="@dimen/small_margin"
                        app:cardUseCompatPadding="true">

                        <LinearLayout
                            android:id="@+id/home_works_of_lessons"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:clickable="true"
                            android:focusable="true"
                            android:foreground="?selectableItemBackground"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/actionbar_size"
                                android:alpha="0.6"
                                android:padding="@dimen/small_margin"
                                android:src="@drawable/ic_baseline_menu_book_24"
                                app:tint="#FFB2B2" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/small_margin"
                                android:alpha="0.6"
                                android:fontFamily="@font/montserrat_medium"
                                android:gravity="center"
                                android:padding="@dimen/small_margin"
                                android:text="Fanlardan vazifalar"
                                android:textColor="@color/black" />

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        app:cardBackgroundColor="@color/white"

                        app:cardCornerRadius="@dimen/small_margin"
                        app:cardElevation="@dimen/small_margin"
                        app:cardUseCompatPadding="true">

                        <LinearLayout
                            android:id="@+id/upload_tasks"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:clickable="true"
                            android:focusable="true"
                            android:foreground="?selectableItemBackground"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/actionbar_size"
                                android:alpha="0.6"
                                android:padding="@dimen/small_margin"
                                android:src="@drawable/ic_baseline_cloud_upload_24"
                                app:tint="#FFB2B2" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/small_margin"
                                android:alpha="0.6"
                                android:fontFamily="@font/montserrat_medium"
                                android:gravity="center"
                                android:padding="@dimen/small_margin"
                                android:text="Vazifalarni yuklash"
                                android:textColor="@color/black" />

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:visibility="gone"
                        app:cardCornerRadius="@dimen/small_margin"
                        app:cardElevation="@dimen/small_margin"
                        app:cardUseCompatPadding="true">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:clickable="true"
                            android:focusable="true"
                            android:foreground="?selectableItemBackground"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/actionbar_size"
                                android:alpha="0.6"
                                android:padding="@dimen/small_margin"
                                android:src="@drawable/accomodation"
                                app:tint="#FFB2B2" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/small_margin"
                                android:fontFamily="@font/montserrat_medium"
                                android:gravity="center"
                                android:padding="@dimen/small_margin"
                                android:text="TTJDA"
                                android:textColor="@color/black" />

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="visible"
                    android:weightSum="2">

                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        app:cardCornerRadius="@dimen/small_margin"
                        app:cardElevation="@dimen/small_margin"
                        app:cardUseCompatPadding="true">

                        <LinearLayout
                            android:id="@+id/deadlines"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:clickable="true"
                            android:focusable="true"
                            android:foreground="?selectableItemBackground"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/actionbar_size"
                                android:alpha="0.6"
                                android:padding="@dimen/small_margin"
                                android:src="@drawable/ic_baseline_notifications_active_24"
                                app:tint="#FFB2B2" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/small_margin"
                                android:fontFamily="@font/montserrat_medium"
                                android:gravity="center"
                                android:padding="@dimen/small_margin"
                                android:text="Deadlines"
                                android:textColor="@color/black" />

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>


                </LinearLayout>


            </LinearLayout>
        </ScrollView>


    </LinearLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/white"
        app:itemIconTint="@color/black"
        app:itemTextColor="@color/black"
        app:menu="@menu/menu_main" />
</androidx.drawerlayout.widget.DrawerLayout>
